<% options = "" %>

<!-- 2階層目を表示 -->
<% if @target_level == 2 %>
  <% if !@second_menu_list.nil? %>
    <% @second_menu_list.each do |data|%>
      <% options += "<option value=#{data.id} >#{data.title}</options>" %>
    <% end %>
  <% end %>
  <%= select_tag('decided_second_menu', options, :size=>10, :multiple=>false, :style=>'width:300px;', :onchange=>'ClickSecondMenu();') %>

