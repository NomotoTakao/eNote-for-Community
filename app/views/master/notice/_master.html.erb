<table style="width:100%;">
    <tr>
      <td style="text-align:left;"><font style="font-weight:bold;">お知らせ設定</font></td>
      <td style="text-align:right;">
        <input type="button" class="submit_large" onClick="ClickBackToMasterList();" value="マスタ一覧へ戻る" />
      </td>
    </tr>
  <tr>
    <td>
      <input type="hidden" id="success_master" value="<%= @result %>" />
      <% form_remote_tag :update=>"master_content", :url=>{ :action=>:save_master} do %>
        <table>
          <tr>
            <td colspan="2">
              <table class="master_table2" style="width:650px;">
                <tr>
                  <td class="master_table2_title" style="width:40%;">NEWアイコン表示期間(トップページ)</td>
                  <td class="master_table2_content" style="width:60%;">
                    <%= hidden_field :m_notice_settings, :new_icon_days, :size=>3, :maxlength=>3 %>
                    <select id="select_new_icon_days">
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                      <option value="6">6</option>
                      <option value="7">7</option>
                      <option value="8">8</option>
                      <option value="9">9</option>
                      <option value="10">10</option>
                    </select>
                  </td>
                </tr>
                <tr>
                  <td class="master_table2_title">頁最大表示件数(お知らせ)</td>
                  <td class="master_table2_content">
                    <%= hidden_field :m_notice_settings, :page_max_count, :size=>3, :maxlength=>3 %>
                    <select id="select_page_max_count">
                      <option value="5">5</option>
                      <option value="10">10</option>
                      <option value="15">15</option>
                      <option value="20">20</option>
                    </select>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          <tr>
            <td style="text-align:right;">
              <input type="submit" class="submit_small" value="登録" onClick="" />
            </td>
          </tr>
        </table>
      <% end %>
    </td>
  </tr>
</table>

