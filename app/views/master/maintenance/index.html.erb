<!-- JavaScriptライブラリ＆JSファイルを<HEAD>で読み込ませる -->
<% content_for(:add_scripts) do -%>
  <%= javascript_include_tag([
      "app/master"
    ]) %>
<% end -%>
<!-- StyleSheet(CSS)ファイルを<HEAD>で読み込ませる -->
<% content_for(:add_styles) do -%>
  <%= stylesheet_link_tag([
      "app/master"
    ]) %>
<% end -%>
<h2>システム管理メニュー</h2>

<% @menus.each do |menu| %>
<div id="" class="master_gadget" style="">
  <table cellpadding="0" cellspacing="0" border="0" style="width:100%;">
  	<tr><td valign="top" style="height:25px;text-align:left;">
	  <div id="" class="master_gadget_title" style="">
	    <h3 style=""><img src="/images/icons/icon_notice.gif" align="top" style="margin-right:5px;"><%= menu.title %></h3>
	  </div>	
  	</td></tr>
  	<tr><td valign="top" style="height:100px;text-align:left;">
	  <div id="" class="master_gadget_body" style="">
	  	<%= menu.memo %>
	  </div>
  	</td></tr>
  	<tr><td valign="top" align="right" style="height:30px;">
	  <%= link_to "設定を変更する", menu.url, :target => menu.target %>
  	</td></tr>
  </table>
</div>
<% end %>


