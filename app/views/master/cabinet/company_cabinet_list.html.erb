<% options = "" %>

<!-- 2階層目を表示 -->
<% if @target_level == 2 %>
  <% if !@second_cabinet_list.nil? %>
    <% @second_cabinet_list.each do |data|%>
      <% options += "<option value=#{data.d_cabinet_head_id} >#{data.title}</options>" %>
    <% end %>
  <% end %>
  <%= select_tag('decided_second_cabinet', options, :size=>5, :multiple=>false, :style=>'width:300px;', :onchange=>'ClickSecondCabinet();') %>

<!-- 3階層目を表示 -->
<% elsif @target_level == 3 %>
  <% if !@third_cabinet_list.nil? %>
    <% @third_cabinet_list.each do |data|%>
      <% options += "<option value=#{data.d_cabinet_head_id} >#{data.title}</options>" %>
    <% end %>
  <% end %>
  <%= select_tag('decided_third_cabinet', options, :size=>5, :multiple=>false, :style=>'width:300px;') %>
<% end %>
