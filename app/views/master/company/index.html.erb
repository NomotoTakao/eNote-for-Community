<!-- JavaScriptライブラリ＆JSファイルを<HEAD>で読み込ませる -->
<% content_for(:add_scripts) do -%>
  <%= javascript_include_tag([
      "app/master"
    ]) %>
<% end -%>
<!-- StyleSheet(CSS)ファイルを<HEAD>で読み込ませる -->
<% content_for(:add_styles) do -%>
  <%= stylesheet_link_tag([
      "app/master"
    ]) %>
<% end -%>

<div style="padding:5px;">
  <!-- エラー -->
  <% err = flash[:place_err_msg] %>
  <% if !err.nil? && err != "" %>
    <table style="margin:10px 0px 0px 10px;">
      <tr style="color:red;">
        <td><%= err %></td>
      </tr>
    </table>
  <% end %>

<div id="input_area">
  <%= form_tag({:action=>'update'}) %>
    <table>
      <tr>
        <td colspan=2>
          <!-- 入力フォーム -->
          <%= render :partial => 'input_table' %>
        </td>
      </tr>
    </table>

    <!-- ボタン -->
    <table class="master_table_button">
      <tr style="border:0px;">
        <td style="text-align:left;">
          <input id="create_button" type="submit" class="submit_small" value="登録" onclick="return ClickUpdateButton()" />
        </td>
        <td style="text-align:right;">
          <input id="back_list_button" type="button" class="submit_large" value="マスタ一覧へ戻る" onclick="ClickBackToMasterList()" />
        </td>
      </tr>
    </table>
  </form>
</div>
<input type="hidden" id="success" value="<%= @result %>" />

<script type="text/javascript">
