<!-- JavaScriptライブラリ＆JSファイルを<HEAD>で読み込ませる -->
<% content_for(:add_scripts) do -%>
  <%= javascript_include_tag([
      "app/master"
    ]) %>
<% end -%>
<!-- StyleSheet(CSS)ファイルを<HEAD>で読み込ませる -->
<% content_for(:add_styles) do -%>
  <%= stylesheet_link_tag([
      "app/master"
    ]) %>
<% end -%>

<table style="width:1000px;">
  <tr>
    <td style="text-align:left;"><font style="font-weight:bold;">ブログ設定</font></td>
    <td style="text-align:right;">
      <input type="button" class="submit_large" onClick="ClickBackToMasterList();" value="マスタ一覧へ戻る" />
    </td>
  </tr>
  <tr>
    <td>
      <% form_remote_tag :update=>"blog_settings", :url=>{:action=>:save_blog_settings} do %>
        <div id="blog_settings">
          <%= render :partial=>"blog_settings" %>
        </div>
      <% end %>
    </td>
  </tr>
</table>
