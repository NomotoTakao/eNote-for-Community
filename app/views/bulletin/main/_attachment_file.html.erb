<!-- ここまで添付関連タグのセット -->
<input type="button" class="submit_small" value="追加" id="addButton" onClick="add_file();" />
<iframe id='bulletin_create_form_upload_frame' name='bulletin_create_form_upload_frame' style='display:none;'></iframe>
