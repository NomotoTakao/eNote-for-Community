<% unless @bulletin_head.nil? %>
  <% unless @bulletin_head.d_bulletin_file.nil? %>
    <% d_bulletin_files = @bulletin_head.d_bulletin_file.reverse %>
    <% d_bulletin_files.each do |d_bulletin_file| %>
      <%= d_bulletin_file.file_name %>
      <%= link_to_remote "[×]",
                         :update=>"attachment_file",
                         :url=>{:action=>:delete_file,
                                :head_id=>@bulletin_head.id,
                                :file_id=>d_bulletin_file.id
                               }
      %><br />
    <% end %>
  <% end %>
<% end %>
<!-- 新たな添付ファイルを指定する -->
