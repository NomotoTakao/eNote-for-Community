<div id="" class="gadget_title" style="">
  <h3 style=""><img src="/images/icons/icon_blog.gif" align="top" style="margin-right:5px;"><%= @gadget_title %></h3>
</div>
<div id="" class="gadget_body" style="">
  <table cellpadding="0" cellspacing="0" style="width:100%;">
    <% @cabinet_list.each do |cabinet| %>
        <tr>
          <td class="" style="width:88%;height:20px;">
            <% if cabinet.post_date.to_date >= (Date.today - 5) %>
              <img src="/images/icons/icon_balloon_new.gif" align="top" class="gadget_table_icon">
            <% else %>
              <img src="/images/icons/icon_balloon.gif" align="top" class="gadget_table_icon">
            <% end %>
            <%= link_to  "【#{cabinet.d_cabinet_head.title}】" + cut_off("#{cabinet.title}", 50), {:controller => "/cabinet/public",
                                                          :action => "index",
                                                          :auto =>cabinet.d_cabinet_head.cabinet_kbn.to_s + "_" + cabinet.d_cabinet_head.id.to_s + "_" + cabinet.id.to_s} %>
          </td>
          <td align="right" class="" style="width:12%;">
            <%= datetime_strftime(cabinet.post_date) %>&nbsp;&nbsp;
          </td>
        </tr>
    <% end %>
  </table>
  <table cellpadding="0" cellspacing="0" style="width:100%;">
    <tr>
      <td style="text-align:center;">
      <% if @cabinet_list.size > 0 %>
        <%= will_paginate @cabinet_list, :renderer => RemoteLinkRenderer,
                                          :update =>"home_top_cabinet",
                                          :params=> {:action => :gadget_cabinet_long},
                                          :prev_label => "<<前へ",
                                          :next_label => "次へ>>",
                                          :method => :get
        %>
      <% end %>
      </td>
    </tr>
  </table>
</div>
