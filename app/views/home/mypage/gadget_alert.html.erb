<div id="" class="gadget_title" style="">
    <h3 style=""><img src="<%= image_path('icons/icon_alarm.gif') %>" align="top" style="margin-right:5px;"><%= @gadget_title %></h3>
</div>
<div id="" class="gadget_body" style="">
    <table cellpadding="0" cellspacing="0" style="width:100%;">
        <% @reminders.each do |reminder| %>
        <tr>
            <td>
              <img src="<%= image_path('icons/icon_balloon.gif') %>" align="top" class="gadget_table_icon">
              <%= link_to "#{reminder.subject}<#{datetime_strftime(reminder.plan_date_from.to_date)}>",
              {:controller => "schedule/reserve/", :action => "index_day", :day => reminder.plan_date_from.to_date.strftime("%Y%m%d")} %>
            </td>
        </tr><% end %>
    </table>
    <table cellpadding="0" cellspacing="0" style="width:100%;">
      <tr>
        <td style="text-align:center;">
        <%= will_paginate @reminders, :renderer => RemoteLinkRenderer,
                                      :update =>"mypage_alert",
                                      :params=> {:controller => "/home/mypage", :action => :gadget_alert},
                                      :prev_label => "<<前へ",
                                      :next_label => "次へ>>",
                                      :inner_window => 0,
                                      :outer_window => 1,
                                      :separator => "",
                                      :method => :get
        %>
        </td>
      </tr>
    </table>
</div>
