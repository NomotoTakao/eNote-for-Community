<table cellpadding="0" cellspacing="0">
<tr>
<td><img src="/images/top_title_topic.gif"><td>
</tr>
</table>
<table cellpadding="0" cellspacing="0">
  <% i = 1 %>
  <% @topics.each do |topic|%>
  <tr>
    <td class="top_topic">
      <%= datetime_strftime(topic.postdate) %>
    </td>
  </tr>
  <tr>
    <td class="top_topic_message">
      <%= link_to h(topic.subject), topic.url,:title => topic.body , :popup => false %>
    </td>
  </tr>  
     <%
         i += 1
         break if i > 5
     %>
  <% end %>
</table>