<div id="" class="gadget_title" style="">
  <h3 style=""><img src="/images/icons/icon_blog.gif" align="top" style="margin-right:5px;"><%= @gadget_title %></h3>
</div>
<!-- 設定データ取得 -->
<% new_icon_days = 5 %>
<% if !@blog_setting.nil? %>
  <% new_icon_days = @blog_setting.new_icon_days %>
<% end %>
<div id="" class="gadget_body" style="">
  <table cellpadding="0" cellspacing="0" style="width:100%;">
    <% @blogs.each do |blog| %>
      <tr>
        <td class="" style="width:88%;height:20px;">
          <% if blog.post_date.to_date >= (Date.today - new_icon_days) %>
            <img src="/images/icons/icon_balloon_new.gif" align="top" class="gadget_table_icon">
          <% else %>
            <img src="/images/icons/icon_balloon.gif" align="top" class="gadget_table_icon">
          <% end %>
          <%= link_to cut_off("<#{blog.d_blog_head.title}> #{blog.title}", 50), {:controller => "blog/view", :action => "top", :user_cd => blog.d_blog_head.user_cd} %>
        </td>
        <td align="right" class="" style="width:12%;">
          <%= datetime_strftime(blog.post_date) %>&nbsp;&nbsp;
        </td>
      </tr>
    <% end %>
  </table>
  <table cellpadding="0" cellspacing="0" style="width:100%;">
    <tr>
      <td style="text-align:center;">
      <% if @blogs.size > 0 %>
        <%= will_paginate @blogs, :renderer => RemoteLinkRenderer,
                                  :update =>"home_top_blog",
                                  :params=> {:action => :gadget_blog_long},
                                  :prev_label => "<<前へ",
                                  :next_label => "次へ>>",
                                  :method => :get
        %>
      <% end %>
      </td>
    </tr>
  </table>
</div>
