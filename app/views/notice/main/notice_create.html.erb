              <td align="center" width="30">&nbsp;</td>
              <td>
                <!-- 「非公開にする」 -->
                <%
                  checked = ""
                  if @d_notice_body.public_flg == 1
                    checked = "checked"
                  end
                %>
                <%= check_box("d_notice_body", "public_flg", :value=>@d_notice_body.public_flg, :checked=>checked) %>非公開にする
