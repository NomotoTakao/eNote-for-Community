      <!-- 「TOP表示区分」 -->
          <%= render :partial=>"top_disp_kbn", :locals=>{:notice_bodies_top_disp_kbn=>@d_notice_body_bodies_top_disp_kbn, :top_disp_kbn=>@d_notice_body.top_disp_kbn} %>
