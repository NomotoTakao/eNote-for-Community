<div class="e_note_general_frame_borderless" style="width:100%;">
  <table class="enote_app_title" style="width:100%;">
    <tr style="vertical-align:middle;">
      <td class="e_note_content_title" style="width:30%;">
        <%= h("上司設定") %>
      </td>
      <td style="text-align:center;">日報を提出する上司を選択してください。</td>
      <td style="width:30%;">
      </td>
    </tr>
  </table>
</div>
<table>
  <tr>
    <td>&nbsp;</td>
    <td style="width:200px;">
      <div style="border:1px solid black;background-color:#fff;text-align:left;height:150px;overflow-y:auto;">
        <input type="hidden" id="selected_superior_user_cd" value="" />
        <input type="hidden" id="selected_superior_user_name" value="" />
        <% unless @org_list.nil? %>
          <ul id="superior_select_tree" class="orgtree">
            <% @org_list.each do |org| %>
              <li id="closed">
                <span id="org_<%= org.org_lvl %>_<%= org.org_cd %>" class="org folder">
                  <font style="font-size:9pt;"><%= org.org_name1 %></font>
                </span>
                <ul></ul>
            <% end %>
          </ul>
        <% end %>
      </div>&nbsp;
    </td>
    <td style="vertical-align:middle;">
      <input type="button" id="button_add" class="submit_small" value=">" />
      <br />
      <br />
      <input type="button" id="button_remove" class="submit_small" value="<" />
    </td>
    <td>
      &nbsp;<input type="text" id="selected_superior" style="width:200px;" />
    </td>
    <td style="vertical-align:bottom;">
      <input type="button" id="button_set_superior" class="submit_large" value="登録" />
    </td>
  </tr>
</table>
