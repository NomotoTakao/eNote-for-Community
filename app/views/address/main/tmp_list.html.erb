  /*
   * 非同期通信により、ツリーの下位要素を取得する処理
   * @param id - クリックされたHTML要素のID
   */
    function get_tree(id){
      if ($("#" + id).next().html() == "") {
        jQuery.ajax(
          {
            type : "GET",
            url : "/address/main/tmp_list",
            data :
              {
                org_cd: id.replace("org_", ""),
                gkbn: <%=@address_kbn%>
              },
            success :
              function(data, dataType){
                if ($("#" + id).next().html() == "") {
                  $("#" + id).after(data);
                }
              },
            error :
              function(){
                alert("通信エラー");
              },
            complete :
              function(){
                // tmp_list.html.erbは使いまわされるので、ID:tmp_ulが重複しないように値をクリアする。
                $("#tmp_ul").attr("id", "");
              }
          }
        );
    }
    }


    /*
     * アドレス一覧を取得する処理
     * @param id - クリックされたHTML要素のID
     */
    function get_address_list(id){
      url = "";
      id = $("#" + id);
      name = $(id).children().text();
      sword = "";
      orgnm = name;

      url = "/address/main/addrs_list?orgcd=:orgcd" + "&gid=0" + "&sword=" + sword + "&gkbn=<%=@address_kbn%>" + "&orgnm=" + encodeURIComponent(orgnm);
      url = url.replace(":orgcd", id.attr("id").replace("org_", ""));
      $("#enote_address_main").load(url);
    }
