<table border="0" cellpadding="0" cellspacing="0" style="width:600px;">
  <tr>
    <td style="font-size:10pt;width:45%;text-align:left;">
      <b>施設の選択</b>
    </td>
    <td style="width:10%;text-align:left;">
    </td>
    <td style="font-size:10pt;width:45%;text-align:left;">
      <b>選択した施設</b>
    </td>
  </tr>
  <tr>
    <td style="font-size:10pt;width:45%;text-align:left;vertical-align:top;">
      <!-- 選択候補エリア -->
      <table>
        <tr>
          <td>
            <select id="facility_undecide" name="facility_undecide" style="width:250px"">
              <% for facility in @facility_undecide %>
                <option value = <%=facility[0]%>><%=facility[1]%></option>
              <% end %>
            </select>
          </td>
        </tr>
        <br>
        <tr>
          <td style="text-align:right;">
            <input id="facility_spare" type="button" class="submit_large" value="空き状況確認" onclick="dialog_spare_time_facility_open()" />
          </td>
        </tr>
      </table>
    </td>
    <td style="font-size:10pt;width:10%;text-align:center;">
    </td>
    <td style="font-size:10pt;width:45%;text-align:center;" valign="top">
      <!-- 選択決定エリア -->
      <table>
        <tr>
          <td>
            <div class="admin_pages_edit_select_box" id="facility_decide">
              <% options = "" %>
              <% if !@facility_decide.nil? && @facility_decide.size > 0 %>
                <% @facility_decide.each do |facility|%>
                  <% options += "<option value=#{facility[0]} >#{facility[1]}</options>" %>
                <% end %>
              <% end %>
              <%= select_tag('decided_facility[]', options, :size=>4, :multiple=>true, :style=>'width:250px;height:90px;border:1px solid black;') %>
            </div>
          </td>
        </tr>
        <br>
        <tr>
          <td style="text-align:right;">
            <input id="facility_delete" type="button" class="submit_small" value="削除" onclick="ClickFacilityDelete()" />
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<input type="hidden" id="decided_facility_old" name="decided_facility_old[]" />
<input type="hidden" id="decided_facility_new" name="decided_facility_new[]" />

