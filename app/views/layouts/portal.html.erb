<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
        <meta http-equiv="content-style-type" content="text/css" />
        <meta http-equiv="content-script-type" content="text/javascript" />
        <meta http-equiv="content-language" content="ja" />
        <meta name="robots" content="Index,Follow" />
        <meta name="keywords" content="eNote for Community" />
        <meta name="description" content="eNote for Community" />
        <meta name="rating" content="General" />
        <meta name="author" content="Lighthouse Corp" />
        <meta name="copyright" content="Copyright(c) 2001-2010 by Lighthouse Corp" />
        <meta name="generator" content="eNote" />
        <title>eNote for Community</title>
        <!-- 当サイト共通 JavaScripts -->
        <script type="text/javascript"> var base_uri = "<%= @base_uri %>";</script>        
        <%#= javascript_include_tag "jquery/jquery-1.3.2.min.js" %>
        <%#= javascript_include_tag "jquery/jquery-ui-1.7.1.custom.min.js" %>
        <%#= javascript_include_tag "jquery/jquery-ui-external/jquery.bgiframe.min.js" %>
        <%#= javascript_include_tag "jquery/jrails" %>
        <%#= javascript_include_tag "jquery/mbTabset/jquery.metadata.js" %>
        <%#= javascript_include_tag "jquery/mbMenu/mbMenu.js" %>
        <%#= javascript_include_tag "jquery/mbMenu/jquery.hoverIntent.js" %>
        <%#= javascript_include_tag "application" %>
        <%#= javascript_include_tag "inputchk" %>
        <%= javascript_include_tag "jquery/jquery-1.3.2.min.js","jquery/jquery-ui-1.7.1.custom.min.js","jquery/jquery-ui-external/jquery.bgiframe.min.js","jquery/jrails","jquery/mbTabset/jquery.metadata.js","jquery/mbMenu/mbMenu.min.js","jquery/mbMenu/jquery.hoverIntent.js","application","inputchk", :cache => "common" %>

        <!-- 当サイト共通 StyleSheet -->
        <%= stylesheet_link_tag "jquery/jquery-ui/redmond/jquery-ui-1.7.1.custom.css" %>
        <%#= stylesheet_link_tag "portal" %>
        <%#= stylesheet_link_tag "headfoot" %>
        <%#= stylesheet_link_tag "jquery/mbMenu/mbMenu.css" %>
        <%= stylesheet_link_tag "portal","headfoot","jquery/mbMenu/mbMenu.css", :cache => "common" %>

        <!-- 各アプリケーション用 stylesheet -->
        <%= @content_for_add_styles if @content_for_add_styles %>
        <!-- 各アプリケーション用 JavaScript -->
        <%= @content_for_add_scripts if @content_for_add_scripts %>
    </head>
    <body>
        <div align="center" class="standard_frame">
            <table cellpadding="0" cellspacing="0" class="layout_table">
                <tr>
                    <td colspan="2">
                        <!-- Header Partition Start -->
                        <div class="standard_header" style="width:100%">
                            <%= render(:partial => 'layouts/header') %>
                        </div>
                        <!-- Header Partition End -->
                    </td>
                </tr>
                <tr>
                    <td valign="top">
                        <!-- Main Partition Begin -->
                        <div id="standard_main">
                            <%= yield %>
                        </div>
                        <!-- Main Partition End -->
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <!-- Footer Partition Begin -->
                        <div class="standard_footer">
                            <%= render(:partial => 'layouts/footer') %>
                        </div>
                        <!-- Footer Partition End -->
                    </td>
                </tr>
            </table>
        </div>
        <script type="text/javascript">
          $(document).ready(
            function(){
              make_header_menu();   //ヘッダーメニューを作成
            }
          );
        </script>
    </body>
</html>
