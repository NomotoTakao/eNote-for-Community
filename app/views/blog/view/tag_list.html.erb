<!-- キーワード一覧 -->

<table>
  <% @tag_list.each do |tag| %>
    <tr>
      <td>&nbsp;</td>
      <td>
        <%= link_to_remote tag.category + "(" + tag.count.to_s + ")",
                           :update=>:right_pane,
                           :url=>{:action=>:blog_list,
                                  :user_cd=>@user_cd,
                                  :keyword=>tag.category,
                                  :type=>"tag"}
        %>
      </td>
    </tr>
  <% end %>
</table>
<br />

